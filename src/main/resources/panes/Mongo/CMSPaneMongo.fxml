<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.ContextMenu?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="500.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ehu.isad.controllers.ui.mongoui.CMSMongoController">
   <children>
      <ComboBox fx:id="comboBox" layoutX="14.0" layoutY="58.0" prefHeight="26.0" prefWidth="140.0" stylesheets="@../style.css" />
      <TextField fx:id="textField" layoutX="169.0" layoutY="58.0" onKeyPressed="#onKeyPressed" prefHeight="26.0" prefWidth="340.0" promptText="Add or filter by URL" stylesheets="@../style.css" />
      <Button fx:id="scanBtn" layoutX="533.0" layoutY="57.0" mnemonicParsing="false" onAction="#onClick" stylesheets="@../style.css" text="Scan" />
      <TableView fx:id="cmsTable" layoutY="126.0" prefHeight="368.0" prefWidth="600.0" stylesheets="@../style.css">
         <columns>
            <TableColumn fx:id="starColumn" editable="false" prefWidth="22.0" resizable="false" sortable="false" />
            <TableColumn fx:id="urlColumn" editable="false" prefWidth="195.0" resizable="false" sortable="false" text="URL" />
            <TableColumn fx:id="cmsColumn" editable="false" prefWidth="139.0" resizable="false" sortable="false" text="CMS" />
            <TableColumn fx:id="lastUpdatedColumn" editable="false" prefWidth="221.0" resizable="false" sortable="false" text="Last Updated" />
         </columns>
         <contextMenu>
            <ContextMenu>
               <items>
                  <MenuItem fx:id="openBrowser" mnemonicParsing="false" onAction="#onBrowserRow" text="Open in browser" />
                  <MenuItem fx:id="favUnFav" mnemonicParsing="false" onAction="#onFavUnFavRow" text="Fav/Unfav" />
                  <Menu mnemonicParsing="false" text="Share scan">
                     <items>
                        <MenuItem fx:id="scanTwitter" mnemonicParsing="false" onAction="#scan" text="Twitter" />
                        <MenuItem fx:id="scanReddit" mnemonicParsing="false" onAction="#scan" text="Reddit" />
                        <MenuItem fx:id="scanTumblr" mnemonicParsing="false" onAction="#scan" text="Tumblr" />
                     </items>
                  </Menu>
                  <Menu mnemonicParsing="false" text="Share target">
                     <items>
                        <MenuItem fx:id="targetTwitter" mnemonicParsing="false" onAction="#target" text="Twitter" />
                        <MenuItem fx:id="targetFacebook" mnemonicParsing="false" onAction="#target" text="Facebook" />
                        <MenuItem fx:id="targetReddit" mnemonicParsing="false" onAction="#target" text="Reddit" />
                        <MenuItem fx:id="targetTumblr" mnemonicParsing="false" onAction="#target" text="Tumblr" />
                     </items>
                  </Menu>
               </items>
            </ContextMenu>
         </contextMenu>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </children>
</AnchorPane>
