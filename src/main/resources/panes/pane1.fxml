<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.Pane?>

<Pane fx:id="pane1" prefHeight="500.0" prefWidth="600.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ehu.isad.controllers.ui.CMSController">
   <children>
      <TextField fx:id="textField" layoutX="17.0" layoutY="34.0" onKeyPressed="#onKeyPressed" prefHeight="26.0" prefWidth="340.0" promptText="Add or filter by URL" />
      <ComboBox fx:id="comboBox" layoutX="374.0" layoutY="34.0" prefHeight="26.0" prefWidth="140.0" />
      <Button fx:id="scanBtn" layoutX="529.0" layoutY="33.0" mnemonicParsing="false" onAction="#onClick" text="Scan" />
      <TableView fx:id="cmsTable" layoutY="99.0" prefHeight="368.0" prefWidth="600.0">
         <columns>
            <TableColumn fx:id="urlColumn" editable="false" prefWidth="75.0" sortable="false" text="URL" />
            <TableColumn fx:id="cmsColumn" editable="false" prefWidth="75.0" sortable="false" text="CMS" />
            <TableColumn fx:id="versionColumn" editable="false" prefWidth="75.0" sortable="false" text="Version" />
            <TableColumn fx:id="lastUpdatedColumn" editable="false" prefWidth="75.0" sortable="false" text="Last Updated" />
         </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </children>
</Pane>
